section.main.sample-transition
  form.bg-content.max-w-sm.rounded.overflow-hidden.shadow-lg.px-8.pt-6.pb-8.mb-4(hx-post="/user/login", hx-swap="outerHTML", hx-target=".main")
    if error_message
      div.mb-4
        p.text-text.px-6.py-4 Error: #{error_message}
    h1.block.text-text.mb-2.py-3.text-3xl Login
    div.mb-4
      label.block.text-text.mb-2(for="email") Email
      input.px-2.py-3.shadow.appearance-none.border(class="focus:outline-none focus:shadow-outline", type="email", name="email", placeholder="first.last@mail.com")
    div.mb-6
      label.block.text-text.mb-2(for="password") Password
      input.px-2.py-3.shadow.appearance-none.border(class="focus:outline-none focus:shadow-outline", type="password", name="password", placeholder="******************")
    div.flex.items-center.justify-between
      button.px-2.py-4.rounded.bg-accent-1.text-content.font-bold(class="hover:bg-accent-2", type="submit", name="submit") Login
      label.block.text-text.mb-2 or
      button.px-2.py-4.rounded.bg-text.text-content.font-bold(class="hover:bg-accent-2", hx-get="/user/register", hx-swap="outerHTML transition:true", hx-target=".main") Register
    
      
