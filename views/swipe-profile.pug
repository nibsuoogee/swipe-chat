section.swipe-profile.sample.transition
  div
    div.rounded.rounded-3xl.overflow-hidden.shadow-lg.bg-content.absolute.z-1(class="absolute bottom-0 left-1/2 transform -translate-x-1/2 -translate-y-1/5", style="width: 300px; height: 300px;")
    div.rounded.rounded-3xl.overflow-hidden.shadow-lg.bg-content.absolute.border-2.border-white.z-5(class="absolute top-1/4 left-1/2 transform -translate-x-1/2 -translate-y-1/2", style="width: 300px; height: 400px;")
      ul
        each image in images 
          image.absolute.inset-0.w-full.h-full.object-cover(src="/uploads/"+image, alt="Profile image")
      div.absolute.bottom-0.left-0.w-full.h-16.bg-gradient-to-t.from-black.to-transparent.z-10
      div.absolute.bottom-0.left-0.p-4.z-15
        h1.block.text-white.mb-2.py-3.text-3xl.font-bold #{username}
    div.flex.items-center.justify-between.divide-x.divide-gray-300(class="absolute bottom-0 left-1/2 transform -translate-x-1/2", style="width: 200px; height: 100px;")
      svg.w-15.h-15.fill-text(viewBox="0 -960 960 960")
