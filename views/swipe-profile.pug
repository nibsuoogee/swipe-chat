        path(xmlns="http://www.w3.org/2000/svg", d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z", class="hover:fill-red-700", hx-get="/user/new-swipe-profile", hx-swap="outerHTML transition:true", hx-target=".swipe-profile", hx-trigger="click")

  
