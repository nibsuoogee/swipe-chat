section.main
  h1 Login
  form(hx-post="/user/login", hx-swap="outerHTML", hx-target=".main")
    if error_message
      p Error: #{error_message}
    label Email
    br
    input(type="email", name="email")
    br
    label Password
    br
    input(type="password", name="password")
    br
    input(type="submit", name="submit")
  label New around here?
  button(hx-get="/user/register", hx-swap="outerHTML", hx-target=".main") Sign up